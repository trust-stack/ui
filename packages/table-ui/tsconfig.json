{
  "include": ["./src/**/*.ts", "./src/**/*.tsx"],
  "exclude": ["node_modules", "dist", "./src**/*.stories.tsx"],
  "types": ["node", "react"],
  "compilerOptions": {
    "composite": true,
    "jsx": "react-jsx",
    "outDir": "./dist",
    "baseUrl": "./",
    "rootDir": "./src",
    "moduleResolution": "node",
    "module": "esnext",
    "target": "esnext",
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "declarationMap": true,
    "isolatedModules": true,
    "esModuleInterop": true
  },
  "typeAcquisition": {
    "enable": true
  }
}
